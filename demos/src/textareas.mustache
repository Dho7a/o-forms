<div class="o-forms-group">
	<label for="o-forms-textarea" class="o-forms-label">Textarea</label>
	<small class="o-forms-additional-info">Optional prompt text goes here</small>
	<textarea placeholder="Placeholder" id="o-forms-textarea" class="o-forms-textarea"></textarea>
</div>
<div class="o-forms-group o-forms--error">
	<label for="o-forms-textarea-invalid" class="o-forms-label">Textarea (error)</label>
	<textarea placeholder="Placeholder" id="o-forms-textarea-invalid" class="o-forms-textarea"></textarea>
	<div class="o-forms-errortext">Invalid entry</div>
</div>
<div class="o-forms-group">
	<label for="o-forms-textarea-disabled" class="o-forms-label">Textarea disabled</label>
	<textarea placeholder="Placeholder" id="o-forms-textarea-disabled" class="o-forms-textarea" disabled="disabled"></textarea>
</div>
